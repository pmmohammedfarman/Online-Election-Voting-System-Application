<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidateEditProfile">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"


        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentRight="true"

        android:text="Edit Profile Picture"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/List"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_below="@id/button1"
        android:layout_toRightOf="@+id/textView7"
        android:textColor="@color/green"
        android:textSize="28sp" />

    <Button
        android:id="@+id/REPLY"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/button1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/REPLY"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List1"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/button3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List2"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />
    <Button
        android:id="@+id/button5"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/button4"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List3"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/button5"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List4"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_below="@id/button6"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/List5"
        android:text="Edit"
        android:textColor="@color/green"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/List1"
        android:layout_width="160dp"
        android:layout_height="41dp"

        android:layout_below="@+id/List"
        android:layout_toRightOf="@+id/textView8"
        android:textColor="@color/green"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/List2"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_below="@+id/List1"

        android:layout_toRightOf="@+id/textView9"
        android:textColor="@color/green"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/List3"
        android:layout_width="160dp"
        android:layout_height="41dp"

        android:layout_below="@+id/List2"
        android:layout_toRightOf="@+id/textView10"

        android:textColor="@color/green"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/List4"
        android:layout_width="160dp"
        android:layout_height="41dp"

        android:layout_below="@+id/List3"
        android:layout_toRightOf="@+id/textView11"
        android:textColor="@color/green"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/List5"
        android:layout_width="160dp"
        android:layout_height="41dp"

        android:layout_below="@+id/List4"
        android:layout_toRightOf="@+id/textView12"


        android:textColor="@color/green"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"

        android:text="Name :"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:text="D.O.B. :"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:text="Constituency:"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:text="Party :"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:text="Phone :"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:text="D.O.B. :"
        android:textSize="17dp" />





</RelativeLayout>

